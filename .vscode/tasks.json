{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-pthread",  // 启用多线程支持
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}",
                "-I",
                "/usr/include",
                "-I",
                "/root/.vs/cppserverstudio/src/Event",
                "-I",
                "/root/.vs/cppserverstudio/src/http",
                "-I",
                "/root/.vs/cppserverstudio/src/log",
                "-I",
                "/root/.vs/cppserverstudio/src/NetWork",
                "-I",
                "/root/.vs/cppserverstudio/src/Rtsp",
                "-I",
                "/root/.vs/cppserverstudio/src/Thread",
                "-I",
                "/root/.vs/cppserverstudio/src/Timer",
                "-I",
                "/root/.vs/cppserverstudio/src/Util",
                "-L",
                "/lib64",
                "-L",
                "/root/.vs/cppserverstudio/bin",
                "-lcppserverstudio"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "CMake Configure",
            "command": "cmake",
            "args": [
                "-B",
                "${workspaceFolder}/build",
                "-S",
                "${workspaceFolder}",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-G",
                //"Ninja"
                "Unix Makefiles"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "CMake Build",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "rtsp_server"  // 指定构建目标
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Project",
            "dependsOn": ["CMake Configure", "CMake Build"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}